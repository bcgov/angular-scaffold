{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "angular-app-build-template",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-build",
        "creationTimestamp": null,
        "labels": {
          "build": "${NAME}-build"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "contextDir": "${SOURCE_CONTEXT_DIR}",
          "git": {
            "uri": "${GIT_REPO_URL}",
            "ref": "${GIT_REF}"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "openshift",
              "name": "nodejs:6"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:${OUTPUT_IMAGE_TAG}"
          }
        },
        "resources": {
          "requests": {
            "memory": "2Gi"
          },
          "limits": {
            "cpu": "1",
            "memory": "4Gi"
          }
        },
        "postCommit": {},
        "nodeSelector": null,
        "successfulBuildsHistoryLimit": 5,
        "failedBuildsHistoryLimit": 5
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "generation": 1,
        "creationTimestamp": null,
        "labels": {
          "build": "${NAME}-build"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.",
      "required": true,
      "value": "angular-app"
    },
    {
      "name": "OUTPUT_IMAGE_TAG",
      "displayName": "Output Image Tag",
      "description": "The tag given to the built image.",
      "required": true,
      "value": "latest"
    },
    {
      "name": "GIT_REPO_URL",
      "displayName": "GIT Source Repo URL",
      "description": "A GIT URL to your source code.",
      "required": true,
      "value": "https://github.com/bcgov/angular-scaffold"
    },
    {
      "name": "GIT_REF",
      "displayName": "Git Reference",
      "description": "The git reference or branch.",
      "required": true,
      "value": "master"
    },
    {
      "name": "SOURCE_CONTEXT_DIR",
      "displayName": "Source Context Directory",
      "description": "The source context directory.",
      "required": false
    }
  ]
}
